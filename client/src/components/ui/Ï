import React, { ReactComponentElement } from 'react';

export default function Slider({
    checked,
    onChange,
    offImage,
    onImage,
}: {
    checked: boolean;
    onChange: any;
    offImage?: any;
    onImage?: any;
}) {
    return (
        <div
            className="transition-all bg-primary/90 rounded-full dark:bg-white p-1 w-[60px] flex-row"
            onClick={onChange}
        >
            <div
                className={
                    'w-[25px] h-[25px] transition-all flex flex-col items-center justify-center rounded-full ' +
                    (checked
                        ? ' translate-x-[27px] bg-secondary'
                        : ' bg-secondary/50')
                }
            >
                <img className="w-[10px] h-[10px]" />
            </div>
        </div>
    );
}
